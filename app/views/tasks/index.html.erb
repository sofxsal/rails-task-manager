<div class="container mt-8">

  <h1>My Tasks</h1>
  <%# <%= link_to "to new", tasks_new_path %>
  <ul>
    <% @tasks.each do |task|  %>
    <li>
      <% if task.completed? %>
      <i class="fa-regular fa-square-check"></i>
      <% else %>
      <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task)%>
      </li>
    <% end %>
  </ul>
  <hr>
  <%= link_to "Add New Task", tasks_new_path  %>
</div>
